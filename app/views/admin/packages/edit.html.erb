<div class="container">

	<h3><center>Edit for package <%= @package.name %></center></h3>

	<%= form_for :package, url: admin_package_path, method: :patch do |f| %>
		<div class="row">
			<div class="col-md-4 col-md-offset-4">
				<div class="form-group">
					<%= f.label :name, "Package Name", class: "control-label" %>
					<%= f.text_field :name, class: "form-control input-md" %>
				</div>

				<div class="form-group">
					<%= f.label :price, "Package Price", class: "control-label" %>
					<%= f.text_field :price, class: "form-control input-md" %>
				</div>

				<div class="form-group">
					<%= f.label :landing_date, "Landing Date", class: "control-label" %>
					<div class="input-group">
				    <span class="input-group-btn">
				      <button class="btn" type="button"><span class="fui-calendar"></span></button>
				    </span>
				    <%= f.text_field :landing_date, class: "form-control input-md", id: "landing_date" %>
				  </div>
				</div>

				<div class="action">
					<%= f.submit "Save", :class => "btn btn-embossed btn-info btn-block" %>
					<%= link_to "Cancel", admin_packages_path, :class => "btn btn-embossed btn-default btn-block" %>
				</div>
			</div>
		</div>

	<% end %>

</div>